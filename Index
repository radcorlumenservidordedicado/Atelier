    </div>
    <div class="botones">
      <a class="btn activo" onclick="tocarTimbre4(); abrirModal()">Departamento 4</a>
    </div>
  </div>

  <!-- Popup -->
  <div id="popup-dept4" class="popup" onclick="cerrarTodo()">
    <div class="popup-contenido" onclick="event.stopPropagation()">
      Unidad Familiar Dpto 4: Estado Timbre Virtual inactivo.<br><br>
      Tocar timbre convencional.
      <div class="popup-btn" onclick="cerrarTodo()">Aceptar</div>
    </div>
  </div>

  <!-- Modal -->
  <div id="modal" class="modal" onclick="cerrarTodo()">
    <div class="modal-contenido" onclick="event.stopPropagation()">
      <h3>Seleccionar Departamento</h3>
      <a class="modal-btn" onclick="cerrarTodo()">4</a>
