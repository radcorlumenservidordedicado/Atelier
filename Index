  <script>
    let sonidoTimbre;
    window.addEventListener('DOMContentLoaded', () => {
      sonidoTimbre = new Audio('audios/timbre3chord1.mp3');
    });
    function mostrarInactivo() {
      document.getElementById("popup-dept4").classList.add("abierto");
    }
    function cerrarTodo() {
      document.querySelectorAll(".popup, .modal").forEach(el => el.classList.remove("abierto"));
    }
    function tocarTimbre4() {
      if (sonidoTimbre) {
        sonidoTimbre.currentTime = 0;
        sonidoTimbre.play().catch(() => {});
      }
      mostrarInactivo();
    }
    function abrirModal() {
      document.getElementById("modal").classList.add("abierto");
    }
  </script>
